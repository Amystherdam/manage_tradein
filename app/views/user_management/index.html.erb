<p id="notice"><%= notice %></p>

<h1>users</h1>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Gender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag set_img(user) %></td>
        <td><%= user.user_profile.name %></td>
        <td><%= user.user_profile.phone %></td>
        <td><%= user.user_profile.gender %></td>
        <td><%= link_to 'Edit', edit_user_management_path(user) %></td>
        <td><%= link_to "Cancel account", delete_by_management_path(user), data: { confirm: "Are you sure?" }, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

